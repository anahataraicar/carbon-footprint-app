<body data-spy="scroll" data-target="#myScrollspy" data-offset="20" id="edit-body">

<div class="container">
  <div class="row">
    <nav class="col-sm-3" id="myScrollspy">
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="#intro">Intro</a></li>
        <li><a href="#travel">Travel</a></li>
        <li><a href="#housing">Housing</a></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#Food">Food<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#meat">Meat</a></li>
            <li><a href="#dairy">Dairy</a></li>  
            <li><a href="#grains">Grains</a></li> 
            <li><a href="#fuirt">Fruit</a></li>
            <li><a href="#other">Other</a></li>     
          </ul>
        </li>
      </ul>
    </nav>


    <div class="col-sm-9">
      <div id="intro" class="form-div">    
        <h2>Intro:</h2>
        <%= form_tag "/footprints", method: :post do %>
          <%= render "#{@partials.first}" %>
        <% end %>
      </div>
      <div id="travel" class="form-div"> 
        <h2>Travel:</h2>
        <% @partials[1..3].each do |partial| %>
          <%= form_tag "/footprints", method: :post do %>

          <%= render "#{partial}" %>
          <%= submit_tag "Update this question" %>

          <% end %>
        <% end %>
      </div>        
      <div id="housing" class="form-div">         
        <h1>Housing</h1>
        <% @partials[4..8].each do |partial| %>
          <%= form_tag "/footprints", method: :post do %>

          <%= render "#{partial}" %>
          <%= submit_tag "Update this question" %>
      
          <% end %>
        <% end %>      
      </div>

      <% @partials[9..13].each do |partial| %>
      <div id="<%= partial %>" class="form-div">
        <%= form_tag "/footprints", method: :post do %>  
          <%= render "#{partial}" %>
          <%= submit_tag "Update this question" %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>

</body>