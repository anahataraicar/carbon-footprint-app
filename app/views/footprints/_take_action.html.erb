<h3>Here's how you can reduce your footprint:</h3>

  <table id="action-table">
    <thead>
      <tr>
        <th>Action</th>
        <th ng-click="sortActions()">MT CO2 saved <i class="fa fa-sort"></i></th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="action in actions | orderBy:'value':descending">
        <td><input type="checkbox" ng-click="decreaseChart()" id="{{action.name}}">{{ action.caption }}</td>
        <td class="action-value">{{ action.value }}</td>
      </tr>
      <tr>
      <td style="text-align: right;">Total:</td>
      <td class="action-value">{{ totalSaved.toFixed(2) }}</td>
    </tbody>
  </table>

<div class="chart-icons">
  <i class="fa fa-pie-chart fa-4x" ng-click="changeChart('pie')"></i>
  <i class="fa fa-bar-chart fa-4x" ng-click="changeChart('bar')"></i>
</div>





