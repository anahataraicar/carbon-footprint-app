<h3>Natural Gas</h3>

<form class="form-inline" role="form">
  <div class="input-group">
    <div class="form-group">
      <input class="form-control" type="text" placeholder="??" ng-model="naturalInput" name="input" ng-class="{changed: ng.input.$dirty}">
    </div>
    <div class="form-group">
      <select class='form-control' ng-model="naturalType" ng-options="type.name for type in naturalOptions">
      </select>          
    </div>
  </div>
</form>

