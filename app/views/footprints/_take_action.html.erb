<h3 id="tips">Here's some tips to reduce your footprint!</h3>
  <table id="action-table" class="table table-striped">
    <thead>
      <tr>
        <th>Action</th>
        <th ng-click="sortActions()" id="centered">MT CO2 saved <i class="fa fa-sort"></i></th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="action in actions | orderBy:'value':descending">
        <td><input type="checkbox" ng-click="decreaseChart()" id="{{action.name}}">{{ action.caption }}</td>
        <td class="action-value">{{ action.value }}</td>
      </tr>
      <tr>
        <td style="text-align: right;">Total:</td>
        <td class="action-value"><strong>{{ totalSaved.toFixed(2) }}</strong></td>
      </tr>
    </tbody>
  </table>





