<div ng-show="modalVisible" id="submit-partial">
  <div id="modalButton"> 
    <h3><br>Last chance to change answers!</h3>
    <button type="button" class="btn btn-default btn-lg" data-toggle="modal" data-target="#myModal" ng-click="submitProfile()">Submit my profile</button>
  </div>


</div>



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-keyboard="false" data-backdrop="static">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="myModalLabel">You produced <span id="total">{{ total }} tons of carbon dioxide</span> per year, <span id="equivalent">that is equivalent to...</span></h2>
      </div>
      <div class="modal-body">
        <%= render "show" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-lg" data-dismiss="modal" ng-click="showCharts()">Continue</button>
      </div>
    </div>
  </div>
</div>

<div class="results-div" ng-if="resultsVisible">
  <%= render "take_action" %>
</div>

