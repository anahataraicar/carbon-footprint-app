<div class="page">

  <ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="#intro" data-toggle="tab">Intro</a></li>
    <li role="presentation"><a href="#travel" data-toggle="tab">Travel</a></li>
    <li role="presentation"><a href="#housing" data-toggle="tab">Housing</a></li>
    <li role="presentation"><a href="#food" data-toggle="tab">Food</a></li>
  </ul>

  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="intro">
      <h2>Update your footprint:</h2>
      <%= form_tag "/footprints/#{current_user.id}", method: :patch do %>
        <%= render "#{@partials.first}" %>
      <% end %>
    </div>

    <div role="tabpanel" class="tab-pane" id="travel">
      <h2>Update your footprint:</h2>
      <% @partials[1..3].each do |partial| %>
        <%= form_tag "/footprints/#{current_user.id}", method: :patch do %>

        <%= render "#{partial}" %>
        <%= submit_tag "Update this question" %>

        <% end %>
      <% end %>
      
    </div>

    <div role="tabpanel" class="tab-pane" id="housing">
      <h2>Update your footprint:</h2>
      <% @partials[4..8].each do |partial| %>
        <%= form_tag "/footprints/#{current_user.id}", method: :patch do %>

        <%= render "#{partial}" %>
        <%= submit_tag "Update this question" %>
      
        <% end %>
      <% end %>
    </div>

    <div role="tabpanel" class="tab-pane" id="food">
      <h2>Update your footprint:</h2>
      <% @partials[9..13].each do |partial| %>
        <%= form_tag "/footprints/#{current_user.id}", method: :patch do %>  

        <%= render "#{partial}" %>
        <%= submit_tag "Update this question" %>
      
        <% end %>
      <% end %>
    </div>
  </div>

  
</div>


