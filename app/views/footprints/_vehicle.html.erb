<form id="carForm">
<h3>Question 2: Vehicle</h3>
 
  <p>
  Mileage: <input ng-model="mileage"><br>
  Miles per year: <input ng-model="miles"><br>
  </p>
  <div>
    <p><%= label_tag "Car mileage:" %>
       <%= text_field_tag :mileage %></p>

    <p><%= label_tag "Miles per year:" %>
       <%= text_field_tag :miles %></p>
  
  
       <%= hidden_field_tag :type, "vehicle"  %>
  </div>

  <select ng-model="myVehicle" ng-options="vehicle.name for vehicle in vehicleOptions" ng-change="updateCar(myVehicle, 'carForm')">
  <option value="">-- choose a type of fuel --</option>
  </select>

</form>








