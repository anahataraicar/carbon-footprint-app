<h3>Question 6: Natural Gas</h4>
<%= form_tag "/habits", method: :post do %>
<% options = options_for_select([["Therms/year", "therms"], ["$/year", "yearly_cost"], ["Cu.Ft/year", "cubic_feet"]]) %>

  <div>
    <p><%= label_tag "Natural gas:" %>
       <%= text_field_tag :natural_gas_input %>
       <%= select_tag(:input_type, options) %></p>
  
       <%= hidden_field_tag :type, "natural_gas"  %>
       <%= hidden_field_tag :page, 6 %>
  <div>

  <div>
    <%= submit_tag "Submit" %>
  </div>
<% end %>
