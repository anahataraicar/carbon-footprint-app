<body id="edit-body">
  <div class="container-fluid header">
    <h1>Bootstrap Affix Example</h1>
    <h3>Fixed (sticky) navbar on scroll</h3>
    <h1>Scroll this page to see how the navbar behaves with data-spy="affix".</h1><a id="anchorPoint"></a></h1>
    <h1>The navbar is attached to the top of the page after you have scrolled a specified amount of pixels.</h1>
   
     <div ng-repeat="car in cars"
      when-visible="animateElementIn"
      when-not-visible="animateElementOut" class="hidden car">
      <p>{{ car.name }}</p>
    </div>



  </div>
  <nav class="navbar navbar-inverse" data-spy="affix" data-offset-top="397">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Home</a>
      </div>
      <ul class="nav navbar-nav navbar-right">
      <% unless current_user %>
        <li><a href="/users/sign_up">Sign up</a></li>
        <li><a href="/users/sign_in">Sign in</a></li>
      <% else current_user %>
        <% if current_user.has_a_profile? %>
          <li><%= link_to "Your footprint", "/footprints/#{current_user.id}" %></li>
        <% end %>
        <li><%= link_to "Sign out", "/users/sign_out", method: :delete if user_signed_in? %></li>
      <% end %>
    </ul>
    </div>
  </nav>
  <div class="container-fluid body">
    <div ng-app="app">
      <div ng-controller="editCtrl" ng-init="init()">
        <div class="row">
          <div class="col-md-7">
            <div class="page-header">
              <h1>Calculate my carboon footprint <small>Subtext for header</small>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <div class="well left">
                Welcome to your carbon dashboard!
              </div>
            <div class="panel panel-default progress">
              <div class="panel-heading">Your progress</div>
                <div class="panel-body">
                  <div id="gaugeContainer"></div>
                </div>
            </div>
            <div class="panel panel-default left">
              <div class="panel-heading">Learn about:</div>
                <ul class="list-group">
                  <li class="list-group-item"><a href="http://www.dsireusa.org/">Incentives by state</a></li>
                  <li class="list-group-item"><a href="https://www3.epa.gov/">EPA</a></li>
                  <li class="list-group-item"><a href="https://www.facebook.com/thedailygreen">The Daily Green</a></li>
                </ul>
            </div>
          </div> <!-- col-md-2 -->
          <div class="col-md-5">
            <div class="panel panel-default main">
              <div class="panel-heading"><%= render "icons" %></div>
                <div class="panel-body">
                  <%= render "edit_partial" %>
                </div>
            </div>
          </div> <!--   column   -->
          <div class="col-md-5">
          <!--   <div class="page-header">
                <h3>Example page header <small>Subtext for header</small></h3>
            </div> -->
            <div id="chart-dropdown">
            <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Chart type <span class="caret"></span></button>
              <ul class="dropdown-menu">
                <li ng-click="changeChart('pie')"><i class="fa fa-pie-chart fa-lg"></i> Pie</li>
                <li ng-click="changeChart('bar')"><i class="fa fa-bar-chart fa-lg"></i> Bar</li>
                <li ng-click="changeChart('bubble')"><i class="fa fa-circle-thin fa-lg"></i> Bubble</li>
              </ul>
            </div>
            </div>
                      <!-- animated popups --> 
            <p class="chart-instructions" ng-if="chartInstructions">Hover over a slice for more info!</p>
            <p class="toggle-instructions" ng-if="toggleInstructions">Click dropdown to toggle the chart type <i class="fa fa-long-arrow-right fa-lg"></i></p>
                    <!-- ******************** -->
              <div id='chart-holder'>
                <div id="pieChartContainer" ng-show="checkChart('pie')">
                </div>
                <div id="barChartContainer" ng-show="checkChart('bar')"></div>
                <div id="bubbleContainer" ng-show="checkChart('bubble')"></div>
              </div>
    
              <div class="well bottom">
                <div class="row">
                  <div class="col-md-5">
                    <h5>Your emissions</h5>
                    <table id="legend">
                      <tr>
                        <td><i class="fa fa-circle travel"></i></td>
                        <td>Travel:</td><td>{{ travelLegend }} MT</td>
                      </tr>
                      <tr>
                        <td><i class="fa fa-circle house"></i></td>
                        <td>Home Energy:</td><td>{{ housingLegend }} MT</td>
                      </tr>
                      <tr>
                        <td><i class="fa fa-circle food"></i></td>
                        <td>Food:</td><td>{{ foodLegend }} MT</td>
                      </tr>
                    </table>
                  </div>
                  <div class="col-md-7">
                    <h4>Something else?</h4>
                    <h3>{{ updatingTotal }} <br>MT CO2/year</h3>
                  </div>
              </div> <!--  well row -->
            </div> <!--  well -->
          </div>  <!-- col-md-5  -->
        </div> <!-- page row -->
        <!-- <nav class="navbar navbar-default navbar-fixed-bottom">
            <div class="container"></div>
        </nav> -->
        <div id="pdfContainer" style="display: none;"></div>
      </div> <!-- ng controller div -->
    </div> <!-- ng app div -->
  </div> <!-- bootstrap container -->
</body>

