<body id="edit-body">
  <div ng-app="app">
    <div ng-controller="editCtrl" ng-init="init()">

      <div class="row">

        <div class="col-md-2">
          <div class="panel panel-default left">
            <div class="panel-heading">Panel heading</div>
            <div class="panel-body">
                Panel content
            </div>
          </div>
          <div class="panel panel-default progress">
            <div class="panel-heading">Your progress</div>
              <div class="panel-body">
                <div id="gaugeContainer"></div>
              </div>
          </div>
          

        </div> <!-- col-md-2 -->

       




        <div class="col-md-5">
          <div class="panel panel-default main">
            <div class="panel-heading"><%= render "icon_table" %></div>
              <div class="panel-body">
                <%= render "edit_partial" %>
              </div>
          </div>
       <!--    <div class="panel panel-default total">
            <div class="panel-heading">Total:</div>
            <div class="panel-body">
              <p>{{ updatingTotal }} <br>MT CO2/year</p>
            </div>
          </div> -->

        <!--   <div class="panel panel-default subtotals">
            <div class="panel-heading">Subtotals</div>
            <ul class="list-group">
              <li class="list-group-item" ng-repeat="total in totals">{{ total.name }}: {{ total.value }}</li>
            </ul>
          </div>
 -->

        </div> <!-- column -->


          
      <div class="col-md-5">

            <div class="btn-group" >
              <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Chart type <span class="caret"></span></button>
              <ul class="dropdown-menu">
                <li ng-click="changeChart('pie')"><i class="fa fa-pie-chart fa-lg"></i> Pie</li>
                <li ng-click="changeChart('bar')"><i class="fa fa-bar-chart fa-lg"></i> Bar</li>
                <li ng-click="changeChart('bubble')"><i class="fa fa-circle-thin fa-lg"></i> Bubble</li>
              </ul>
            </div>

  
    
            
           
          
            <p class="chart-instructions" ng-if="chartInstructions">Hover over a slice for more info!</p>
            
            <p class="toggle-instructions" ng-if="toggleInstructions">Click dropdown to toggle the chart type <i class="fa fa-long-arrow-right fa-lg"></i></p>

            <div id='chart-holder'>
              <div id="pieChartContainer" ng-show="checkChart('pie')">
              </div>
              <div id="barChartContainer" ng-show="checkChart('bar')"></div>
              <div id="bubbleContainer" ng-show="checkChart('bubble')"></div>
            </div>


          
              <div class="well bottom">
                <div class="row">
                  <div class="col-md-5">
                    <h5>Your emissions</h5>
                    <table id="legend">
                      <tr>
                        <td><i class="fa fa-circle travel"></i></td>
                        <td>Travel:</td><td>{{ travelLegend }} MT</td>
                      </tr>
                      <tr>
                        <td><i class="fa fa-circle house"></i></td>
                        <td>Home Energy:</td><td>{{ housingLegend }} MT</td>
                      </tr>
                      <tr>
                        <td><i class="fa fa-circle food"></i></td>
                        <td>Food:</td><td>{{ foodLegend }} MT</td>
                      </tr>
                    </table>
                  </div>
                  <div class="col-md-7">
                    <p>charts</p>
                  </div>
              </div>
                  


            </div> <!-- col -->

           


          </div>  <!-- row -->





        </div>
      </div>
    </div>


